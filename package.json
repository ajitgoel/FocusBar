{
  "name": "focusbar",
  "version": "1.0.0",
  "description": "Beautiful menu bar app for focused work sessions",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern='test/unit'",
    "test:integration": "jest --testPathPattern='test/integration'",
    "build": "npm run build-mac",
    "build-mac": "electron-builder --mac",
    "build-mac-arm": "electron-builder --mac --arm64",
    "build-win": "electron-builder --win",
    "build-all": "electron-builder --mac --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "productivity",
    "timer",
    "pomodoro",
    "focus",
    "macos-menu-bar"
  ],
  "author": {
    "name": "FocusBar",
    "email": "support@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "main.js",
      "preload.js",
      "renderer.js",
      "settings.js",
      "lib/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "modulePathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  },
  "build": {
    "appId": "com.focusbar.app",
    "productName": "FocusBar",
    "copyright": "Copyright Â© 2024",
    "publish": null,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "electronDist": "node_modules/electron/dist",
    "extraResources": [
      {
        "from": "icons/",
        "to": "icons/"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "settings.html",
      "settings.js",
      "styles.css",
      "settings.css",
      "lib/**/*",
      "icons/**/*",
      "node_modules/electron-store/**/*"
    ],
    "mac": {
      "icon": "icons/icon_512x512.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "LSUIElement": true,
        "LSBackgroundOnly": false
      }
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FocusBar"
    }
  }
}
